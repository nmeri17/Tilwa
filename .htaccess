RewriteEngine On

php_value upload_max_filesize 10M

php_value post_max_size 11M


# QSA = tack query string onto the target tilwa_request
RewriteRule ^/?(.+)$ public/index.php?tilwa_request=$1 [NC,QSA,L]

# serve index
RewriteRule ^/?$ public/index.php?tilwa_request=index [NC,QSA,L]


# invalid file?
RewriteCond %{REQUEST_FILENAME} !-f

# fuck off our dirs!
RewriteCond %{REQUEST_FILENAME} -d

# extensioned requests, suck it!
RewriteCond %{REQUEST_URI} ^(.+\.\w{3,4})$

RewriteRule .? public/index.php?tilwa_request=fraudulent_tilwa [L]
